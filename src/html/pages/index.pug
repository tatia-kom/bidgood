        // MODALS

        div.modal#signIn
            div.modal__content
                button.modal__close.close-modal

                p.modal__title Sign In

                form.modal__form
                    input.modal__input(type="text" placeholder="Login")
                    input.modal__input(type="password" placeholder="Password")

                    button.modal__forget-link.open-modal(data-modal="#passwordReset") Forgot password?

                    button.button Enter

                a.modal__google(href="") Sign in with Google

                p.modal__link Don't have a Bidgood account? <a href="" class="open-modal" data-modal="#signUp">Sign Up</a>

        div.modal#signUp
            div.modal__content
                button.modal__close.close-modal

                p.modal__title Sign Up

                form.modal__form
                    input.modal__input(type="email" placeholder="Email")
                    input.modal__input(type="password" placeholder="Password")
                    input.modal__input(type="password" placeholder="Confirm Password")

                    button.button Registration

                a.modal__google(href="") Sign Up with Google

